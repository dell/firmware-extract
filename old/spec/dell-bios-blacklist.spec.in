Name:    dell-bios-blacklist
Version: 1.0
Release: 1
License: GPL
Summary: BIOS blacklist for Dell systems
Group: Applications/Libraries
Buildroot: %{_tmppath}/%{name}-%{version}-%{release}-root-%(%{__id_u} -n)
BuildArch: noarch
Requires:  firmware-addon-dell >= 0:1.1
Requires:  firmware-tools >= 0:1.1

%description
This RPM contains the blacklist used by the apply updates command to determine
when to disallow BIOS update via RBU.

%prep
%build
%install
[ "$RPM_BUILD_ROOT" != "/" ] && rm -rf ${RPM_BUILD_ROOT}
install -d -m 755 $RPM_BUILD_ROOT/%{_datadir}/firmware/bios   
cp -a %{blacklist_file} $RPM_BUILD_ROOT/%{_datadir}/firmware/bios/%{name}-%{version}-%{release}-blacklist.xml

%clean
[ "$RPM_BUILD_ROOT" != "/" ] && rm -rf ${RPM_BUILD_ROOT}

%files 
%defattr(-,root,root)
%attr(755,root,root) %{_datadir}/firmware/bios/

